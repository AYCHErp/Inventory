<?xml version="1.0" encoding="utf-8" ?>
<FrapidReport>
  <Header />
  <Title>Inventory Account Statement</Title>
  <TopSection>
    <table class="table horizontal">
      <tr>
        <td>{Resources.Titles.ItemId}</td>
        <td>
          {DataSource[0].item_id} <br />
        </td>
      </tr>
      <tr>
        <td>{Resources.Titles.ItemCode}</td>
        <td>
          {DataSource[0].item_code} <br />
        </td>
      </tr>
      <tr>
        <td>{Resources.Titles.ItemName}</td>
        <td>
          {DataSource[0].item_name} <br />
        </td>
      </tr>
      <tr>
        <td>{Resources.Titles.ItemGroup}</td>
        <td>{DataSource[0].item_group_name}</td>
      </tr>
      <tr>
        <td>{Resources.Titles.ItemType}</td>
        <td>{DataSource[0].item_type_name}</td>
      </tr>
      <tr>
        <td>{Resources.Titles.Brand}</td>
        <td>{DataSource[0].brand_name}</td>
      </tr>
      <tr>
        <td>{Resources.Titles.UnitName}</td>
        <td>{DataSource[0].unit_name}</td>
      </tr>
    </table>
    <br />
  </TopSection>
  <Body>
    <Content>
      <h2>{DataSource[0].item_code} ({DataSource[0].item_name})</h2>
    </Content>
    <GridViews>
      <GridView>
        <GridViewDataSource Index="1" Style="white-space:nowrap;">
        </GridViewDataSource>
      </GridView>
    </GridViews>
  </Body>
  <BottomSection>
  </BottomSection>
  <DataSources>
    <DataSource>
      <Query>
        SELECT * FROM inventory.item_view WHERE item_id=@ItemId;
      </Query>
      <Parameters>
        <Parameter Name="@ItemId" FieldLabel="Account Number" Type="string" PopulateFrom="/api/forms/inventory/items/display-fields" KeyField="Key" ValueField="Value" />
      </Parameters>
    </DataSource>
    <DataSource>
      <Query>
        SELECT
        book,
        tran_code,
        value_date,
        book_date,
        debit,
        credit,
        balance,
        statement_reference
        FROM inventory.get_account_statement
        (@From::date, @To::date, @UserId::integer, @ItemId::integer, @StoreId::integer)
        ORDER BY id;
      </Query>
      <Parameters>
        <Parameter Name="@From" FieldLabel="From Date" Type="System.DateTime" />
        <Parameter Name="@To" FieldLabel="To Date" Type="System.DateTime" />
        <Parameter Name="@UserId" FieldLabel="User Id" Type="int" DefaultValue="{Meta.UserId}" />
        <Parameter Name="@ItemId" FieldLabel="Account Number" Type="int" PopulateFrom="/api/forms/inventory/items/display-fields" KeyField="Key" ValueField="Value" />
        <Parameter Name="@StoreId" FieldLabel="Store" Type="int" PopulateFrom="/api/forms/inventory/stores/display-fields" KeyField="Key" ValueField="Value" />
      </Parameters>
      <RunningTotalTextColumnIndex>3</RunningTotalTextColumnIndex>
      <RunningTotalFieldIndices>4, 5</RunningTotalFieldIndices>
    </DataSource>
  </DataSources>
</FrapidReport>